@page "/servers"
@using VelocityNET.Presentation.Hydrogen.Models
@inherits ComponentWithViewModel<ServersViewModel>


<h3>Servers</h3>

<div class="row">
    <div class="col-md-auto">
        <div class="card shadow">

            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Available servers</h6>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <th scope="col">Name</th>
                    <th scope="col">URI</th>
                    <th/>
                    </thead>
                    <tbody>
                    @foreach (Server server in ViewModel!.Servers)
                    {
                        
                        <tr>
                            <td>@server.Name</td>
                            <td>@server.Uri</td>
                            @if (!IsActive(server))
                            {
                                <td>
                                    <a role="button" class="btn btn-sm btn-success" @onclick="() => ViewModel!.SelectActiveServer(server)">
                                        <i class="fa fa-check"></i>
                                    </a> 
                                </td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
               <button class="btn btn-sm btn-success mt-2" @onclick="ViewModel!.AddNewServerAsync">Add Server</button>
        </div>
    </div>
</div>

@code
{
    private bool IsActive(Server server) => ViewModel!.ActiveServer.Uri == server.Uri;
}
