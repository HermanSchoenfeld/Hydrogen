@using VelocityNET.Presentation.Blazor.Shared.Plugins
@inherits ComponentWithViewModel<AppBlocksMenuViewModel>

<!-- Heading -->
<div class="sidebar-heading">
    Apps
</div>
@foreach (IApp appBlock in ViewModel.Apps)
{
    <li class="nav-item">
        <NavLink class="nav-link" href="@appBlock.Route" Match="NavLinkMatch.Prefix">
            <i class="fas fa-fw fa-chart-area"></i>
            <span>@appBlock.Name</span>
        </NavLink>
    </li>
}

<!-- Divider -->
<hr class="sidebar-divider d-none d-md-block">