@using VelocityNET.Presentation.Blazor.Shared.Plugins
@inherits ComponentWithViewModel<VelocityNET.Presentation.Blazor.ViewModels.AppsMenuViewModel>

<!-- Heading -->
<div class="sidebar-heading">
    Apps
</div>
@foreach (IApp app in ViewModel.Apps)
{
    <li class="nav-item">
        <NavLink class="nav-link" href="@app.Route" Match="NavLinkMatch.Prefix">
            <i class="fas fa-fw fa-chart-area"></i>
            <span>@app.Name</span>
        </NavLink>
    </li>
}

<!-- Divider -->
<hr class="sidebar-divider d-none d-md-block">