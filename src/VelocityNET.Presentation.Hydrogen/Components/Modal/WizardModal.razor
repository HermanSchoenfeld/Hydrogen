@inherits ModalComponent<WizardModalViewModel>

<ModalTemplate OnCloseFunc="ViewModel!.RequestCloseAsync" Width="@Width" Height="@Height">
    <HeaderTemplate>
        <p> @_host?.ViewModel!.Title </p>
    </HeaderTemplate>
    <BodyTemplate>
        <CascadingValue Value="@Wizard">
            <CascadingValue Name="OnFinished" Value="@OnFinished">
                <CascadingValue Name="OnCancelled" Value="@OnCancelled">
                    <CascadingValue Name="OnStepChange" Value="@OnStepChange">
                           <WizardHost @ref="_host"/>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </BodyTemplate>
</ModalTemplate>