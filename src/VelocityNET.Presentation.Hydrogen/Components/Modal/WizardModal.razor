@inherits ModalComponent<WizardModalViewModel>

<ModalTemplate OnCloseFunc="ViewModel!.RequestCloseAsync">
    <HeaderTemplate>
        <p> @_host?.ViewModel!.Title </p>
    </HeaderTemplate>
    <BodyTemplate>
        <CascadingValue Value="@Wizard">
            <CascadingValue Name="OnFinished" Value="@OnFinished">
                <CascadingValue Name="OnCancelled" Value="@OnCancelled">
                    <WizardHost @ref="_host"/>
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </BodyTemplate>
</ModalTemplate>