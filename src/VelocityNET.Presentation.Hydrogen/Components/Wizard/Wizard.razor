
@CurrentStepFragment

<div class="text-right">
    <button class="btn btn-secondary btn-sm" @onclick="CancelAsync"> Cancel</button>
    <button class="btn btn-info btn-sm" disabled="@IsDisabled()" @onclick="PreviousAsync">Back</button>

    @if (HasNext)
    {
        <button class="btn btn-info btn-sm" @onclick="NextAsync">Next</button>
    }
    else
    {
        <button class="btn btn-info btn-sm @FinishClass()" @onclick="FinishAsync">Finish</button>
    }

</div>

@code
{
    public bool IsDisabled() => !HasPrevious || IsFinished;

    public string FinishClass() => IsFinished ? "disabled" : "";
}