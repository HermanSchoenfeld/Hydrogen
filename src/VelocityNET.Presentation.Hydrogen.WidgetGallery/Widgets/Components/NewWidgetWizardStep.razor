@inherits WizardStep<NewWidgetModel, NewWidgetWizardStepViewModel>

@if (Model is not null)
{
    <EditForm EditContext="EditContext">

        <div class="form-group">
            <label for="Name">Name</label>
            <InputText id="Name" class="form-control form-control-sm" @bind-Value="Model.Name"/>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <InputText id="Description" class="form-control form-control-sm" @bind-Value="Model.Description"/>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <InputNumber id="Price" class="form-control" @bind-Value="Model.Price"/>
        </div>
        <div class="form-group">
            <label for="dimensions">Supply dimensions ? </label>
            <InputCheckbox class="form-control form-control-sm" id="dimensions" @bind-Value="Model.AreDimensionsKnown"/>
        </div>
    </EditForm>
}