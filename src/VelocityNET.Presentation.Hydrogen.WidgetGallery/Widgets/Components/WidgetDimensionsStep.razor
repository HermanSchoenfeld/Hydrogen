@inherits WizardStep<NewWidgetModel, WidgetDimensionsStepViewModel>

@if (Model is not null)
{
    <EditForm EditContext="EditContext" >

        <div class="form-group">
            <label for="Name">Height</label>
            <InputNumber id="Name" class="form-control form-control-sm" @bind-Value="Model.Height"/>
        </div>

        <div class="form-group">
            <label for="Description">Length</label>
            <InputNumber id="Description" class="form-control form-control-sm" @bind-Value="Model.Length"/>
        </div>

    </EditForm>
}

@code {
    public override string Title { get; } = "Properties";
}