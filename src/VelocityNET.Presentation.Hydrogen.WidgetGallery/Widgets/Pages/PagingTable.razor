@page "/widget-gallery/paging-table"
@using VelocityNET.Presentation.Hydrogen.Models
@inherits ComponentWithViewModel<PagingTableViewModel>

<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">Rapid Table</div>
            <div class="card-body">
                <RapidTable
                    ItemLimit="10"
                    Source="@ViewModel!.NodeService.GetBlocksAsync()"
                    TItem="Block"
                    class="table table-striped table-borderless table-hover">
                    <HeaderTemplate>
                        <tr>
                            <th> Address</th>
                            <th class="text-right"> Number</th>
                        </tr>
                    </HeaderTemplate>
                    <ItemTemplate Context="block">
                        <span style="display: contents" @onclick="() => ViewModel.OnClickRowAsync(block)">
                            <tr>
                                <td>@block.Address</td>
                                <td class="text-right">@block.Number</td>
                            </tr>
                        </span>
                    </ItemTemplate>
                </RapidTable>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">Paged Table</div>
            <div class="card-body">
                <PagedTableTemplate
                    class="table table-borderless table-hover overflow-auto"
                    Items="Blocks"
                    TItem="Block"
                    PageSize="10"
                    OnRowSelect="@ViewModel!.OnClickRowAsync">
                    <HeaderTemplate>
                        <tr>
                            <th> Address</th>
                            <th class="text-right"> Number</th>
                        </tr>
                    </HeaderTemplate>
                    <ItemTemplate Context="block">
                        <tr>
                            <td>@block.Address</td>
                            <td class="text-right">@block.Number</td>
                        </tr>
                    </ItemTemplate>
                </PagedTableTemplate>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header"> Virtual paged table</div>
            <div class="card-body">
                <VirtualPagedTableTemplate class="table table-borderless table-hover overflow-auto"
                                           ItemsProvider="request => ViewModel.NodeService.GetBlocksAsync(request)"
                                           OnRowSelect="@ViewModel!.OnClickRowAsync"
                                           TItem="Block"
                                           PageSize="10">
                    <HeaderTemplate>
                        <tr>
                            <th> Address</th>
                            <th> Number</th>
                        </tr>
                    </HeaderTemplate>
                    <ItemTemplate Context="block">
                        <tr>
                            <td>@block.Address</td>
                            <td>@block.Number</td>
                        </tr>
                    </ItemTemplate>
                </VirtualPagedTableTemplate>
            </div>
        </div>
    </div>
</div>


@code
{
    List<Block> Blocks { get; } = Enumerable.Range(0, 100).Select(x => new Block() {Address = Guid.NewGuid().ToString(), Number = x}).ToList();
}